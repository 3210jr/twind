{
  "name": "twind-monorepo",
  "version": "1.0.0-next.0",
  "description": "twind monorepo",
  "private": true,
  "type": "module",
  "homepage": "https://twind.style",
  "bugs": "https://github.com/tw-in-js/twind/issues",
  "repository": "github:tw-in-js/twind",
  "keywords": [
    "twind",
    "tw-in-js",
    "tailwind",
    "tailwindcss",
    "tailwind-in-js"
  ],
  "license": "MIT",
  "author": "Sascha Tandel (https://github.com/sastan)",
  "funding": [
    {
      "type": "Open Collective",
      "url": "https://opencollective.com/twind"
    },
    {
      "type": "Github Sponsor",
      "url": "https://github.com/sponsors/tw-in-js"
    }
  ],
  "engines": {
    "node": ">=14.15.0",
    "pnpm": "^7.13.0"
  },
  "// https://nodejs.org/dist/latest-v16.x/docs/api/corepack.html": "",
  "packageManager": "pnpm@7.13.0",
  "// for npm/yarn within codesandbox — same as in pnpm-workspace.yml": "",
  "workspaces": [
    "examples/*",
    "packages/*",
    "sites/*"
  ],
  "size-limit": [
    {
      "name": "twind",
      "path": "packages/twind/dist/twind.esnext.js",
      "brotli": true,
      "limit": "8kb"
    },
    {
      "name": "twind (setup)",
      "path": "packages/twind/dist/twind.esnext.js",
      "import": "{ setup }",
      "brotli": true,
      "limit": "5.45kb"
    },
    {
      "name": "twind (twind + cssom)",
      "path": "packages/twind/dist/twind.esnext.js",
      "import": "{ twind, cssom }",
      "brotli": true,
      "limit": "4.8kb"
    },
    {
      "name": "@twind/cdn",
      "path": "packages/cdn/dist/cdn.esnext.js",
      "brotli": true,
      "limit": "15.5kb"
    },
    {
      "name": "@twind/preset-tailwind",
      "path": "packages/preset-tailwind/dist/preset-tailwind.esnext.js",
      "brotli": true,
      "limit": "9.3kb",
      "ignore": [
        "twind"
      ]
    }
  ],
  "// start — use 'BROWSER=none' to prevent vite to open a browser if within codesandbox or stackblitz": "",
  "scripts": {
    "start": "BROWSER=none npm run test:ui",
    "build": "pnpm run --recursive --if-present --filter='./packages/*' build",
    "check": "TIMING=1 eslint --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.svelte --ignore-path .gitignore .",
    "check:fix": "npm run check -- --fix",
    "size-limit": "size-limit",
    "format": "prettier --write --plugin-search-dir=. --ignore-path .gitignore . '!pnpm-lock.yaml'",
    "test": "vitest",
    "test:ui": "npm test -- --ui",
    "test:coverage": "vitest run --coverage",
    "release": "pnpm publish --recursive",
    "changeset:version": "changeset version && pnpm i --lockfile-only",
    "build:website": "pnpm run --filter=./sites/twind.style build",
    "prepare": "node ./.husky/prepare.cjs"
  },
  "// style-vendorizer is included here to allow examples to find it": "",
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@changesets/get-github-info": "^0.5.1",
    "@size-limit/esbuild": "^8.1.0",
    "@size-limit/file": "^8.1.0",
    "@types/node": "^14.5.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitest/coverage-c8": "^0.23.4",
    "@vitest/ui": "^0.23.4",
    "distilt": "^0.17.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^3.4.1",
    "happy-dom": "^2.55.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jiti": "^1.16.0",
    "lint-staged": "^12.5.0",
    "local-pkg": "^0.4.2",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.1",
    "size-limit": "^8.1.0",
    "style-vendorizer": "^2.2.3",
    "svelte": "^3.50.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "vitest": "^0.23.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "@size-limit/esbuild@8.1.0": "patches/@size-limit__esbuild@8.1.0.patch",
      "monaco-editor@0.34.0": "patches/monaco-editor@0.34.0.patch",
      "csstree-validator@3.0.0": "patches/csstree-validator@3.0.0.patch"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.test.js",
        "options": {
          "semi": true
        }
      },
      {
        "files": [
          "sites/twind.run/src/lib/templates/**"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "shared-node-browser": true
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "sites/**"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.cjs"
        ],
        "env": {
          "node": true
        }
      },
      {
        "files": [
          "**/*.jsx"
        ],
        "parser": "@typescript-eslint/parser",
        "extends": [
          "eslint:recommended"
        ]
      },
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3",
        "plugins": [
          "svelte3"
        ]
      },
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": [
            "./examples/**/tsconfig.json",
            "./packages/**/tsconfig.json",
            "./sites/**/tsconfig.json"
          ]
        },
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "rules": {
          "@typescript-eslint/no-unsafe-assignment": "off",
          "@typescript-eslint/no-unsafe-argument": "off",
          "@typescript-eslint/no-unsafe-return": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/restrict-plus-operands": "off",
          "@typescript-eslint/no-extra-semi": "off",
          "@typescript-eslint/no-unsafe-call": "off",
          "@typescript-eslint/restrict-template-expressions": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx,svelte}": [
      "eslint --cache --fix",
      "vitest related --run --silent"
    ],
    "!(pnpm-lock.yaml)*": "prettier --plugin-search-dir=. --ignore-unknown --write"
  }
}
