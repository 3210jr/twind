{
  "name": "twind-monorepo",
  "version": "1.0.0-next.0",
  "description": "twind monorepo",
  "private": true,
  "type": "module",
  "homepage": "https://twind.dev",
  "bugs": "https://github.com/tw-in-js/twind/issues",
  "repository": "github:tw-in-js/twind",
  "keywords": [
    "twind",
    "tw-in-js",
    "tailwind",
    "tailwindcss",
    "tailwind-in-js"
  ],
  "license": "MIT",
  "author": "Sascha Tandel (https://github.com/sastan)",
  "engines": {
    "node": ">=12.4",
    "pnpm": "^6.10.0"
  },
  "// https://nodejs.org/dist/latest-v16.x/docs/api/corepack.html": "",
  "packageManager": "pnpm@6.24.3",
  "// for npm/yarn within codesandbox — same as in pnpm-workspace.yml": "",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "size-limit": [
    {
      "name": "@twind/core",
      "path": "packages/core/dist/core.esnext.js",
      "brotli": true,
      "limit": "6kb"
    },
    {
      "name": "twind/cdn",
      "path": "packages/twind/dist/cdn.esnext.js",
      "brotli": true,
      "limit": "14.5kb"
    }
  ],
  "// start — use 'BROWSER=none' to prevent vite to open a browser if within codesandbox or stackblitz": "",
  "scripts": {
    "start": "BROWSER=none npm run test:ui",
    "build": "pnpm prepublishOnly --recursive --if-present --filter=./packages",
    "check": "eslint --ext .js,.jsx,.cjs,.mjs,.ts,.tsx --ignore-path .gitignore .",
    "check:fix": "npm run check -- --fix",
    "size-limit": "size-limit",
    "format": "prettier --write --ignore-path .gitignore . '!pnpm-lock.yaml'",
    "test": "vitest --reporter dot",
    "test:ui": "npm test -- --ui",
    "test:coverage": "vitest run --coverage",
    "release": "pnpm publish -r",
    "changeset:version": "changeset version && pnpm i --lockfile-only",
    "prepare": "node ./.husky/prepare.cjs"
  },
  "// these are added as dependencies to all packages": "",
  "// @swc/helpers: common helper used by code generated from swc (distilt)": "",
  "dependencies": {
    "@swc/helpers": "^0.3.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "@changesets/get-github-info": "^0.5.0",
    "@size-limit/esbuild": "^7.0.5",
    "@size-limit/file": "^7.0.5",
    "@size-limit/time": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vitest/ui": "^0.1.20",
    "c8": "^7.11.0",
    "distilt": "^0.15.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "happy-dom": "^2.27.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.1.7",
    "local-pkg": "^0.4.1",
    "prettier": "^2.5.1",
    "size-limit": "^7.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "vitest": "^0.1.20"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "shared-node-browser": true
    },
    "ignorePatterns": [
      "dist",
      "node_modules"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": "./packages/**/tsconfig.json"
        },
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx}": [
      "eslint --cache --fix",
      "vitest related --run --silent"
    ],
    "!(pnpm-lock.yaml)*": "prettier --ignore-unknown --write"
  }
}
